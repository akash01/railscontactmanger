<%= form_for @contact ,:html => {:class => "form-inline"} do |f| %>
	<div class="form-group">
		<td><%= f.text_field(:first_name, :class => "form-control", :placeholder => "John")%></td>
	</div>

	<div class="form-group">
		<td><%= f.text_field(:last_name, :class => "form-control", :placeholder => "Doe")%></td>
	</div>
	<div class="form-group">
		<td><%= f.text_field(:email, :class => "form-control", :placeholder => "john@doe.com")%></td>
	</div>
	<div class="form-group">
		<td><%= f.text_field(:phone_number, :class => "form-control", :placeholder => "0548970")%></td>
	</div>
	<div class="form-group">
		<%= f.submit(:class => "btn btn-primary") %>
	</div>
<% end %>

