<!DOCTYPE html>
<html>
  <head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Rails Bootstrap</title>
		<%= stylesheet_link_tag  "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
  </head>
  <body id="home">
    <section class="container">

		<!-- row 1: navigation -->
	    <div class="row">
	        <nav class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
	            <div class="navbar-header">
	            	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#collapse" >
	                    <span class="src-only"></span>   
	                    <span class="icon-bar"></span>
	                    <span class="icon-bar"></span>
	                    <span class="icon-bar"></span>
	                </button>
	                <a href="/" class="navbar-brand">Contacts</a>
	            </div> 
	            <div class="collapse navbar-collapse" id="collapse">
	                <ul class="nav navbar-nav">
	                    <li><a href="#">Home</a></li>
	                    <li><a href="#">About</a></li>
	                </ul>
	            </div>
	        </nav> 
	    </div> <!-- navigation -->
	
    <header class="row">
    	<div class="col col-sm-12">
        	<img src="/assets/animals.jpg" alt="" id="logo" class="img-responsive center-block">
        </div>
    </header> <!-- header -->
    
    <div id="main">
		<%= yield %>
	</div>
	
	</section> <!-- container -->

	<!-- footer -->
	<nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
	  <div class="container">
			<p class="navbar-text pull-right">Created by <a href="#" class="navbar-link">Mukesh</a></p>
	  </div>
	</nav>
  </body>
</html>
